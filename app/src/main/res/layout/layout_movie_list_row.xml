<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:layout_marginRight="6dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_poster"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="The Shawshank Redemption"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_poster"
            />
        <TextView
            android:id="@+id/tv_release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_poster"
            android:layout_below="@id/tv_title"
            android:textSize="12sp"
            android:text="1995"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/img_poster"
            />
        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_poster"
            android:layout_below="@id/tv_release_year"
            android:textSize="12sp"
            android:text="5.3"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_star_black_24dp"
            android:drawableRight="@drawable/ic_star_black_24dp"
            android:layout_toRightOf="@id/img_poster"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>